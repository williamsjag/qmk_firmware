{
    "manufacturer": "williamsjag",
    "keyboard": "Cygnus",
    "keyboard_name": "Cygnus 4x6 Split",
    "maintainer": "williamsjag",
    "processor": "RP2040",
    "bootloader": "rp2040",

    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "cols": ["GP3", "GP4", "GP5", "GP6", "GP7", "GP8"],
        "rows": ["GP28", "GP27", "GP26", "GP15", "GP14"]
    },
    "matrix_size": {
        "cols": 10,
        "rows": 6
    },
    "url": "https://github.com/williamsjag/dactyl_cygnus_4x6",
    "usb": {
        "device_version": "1.0.0",
        "pid": "0xBEEF",
        "vid": "0xFEED"
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                // Left Half (Rows 0-4, Cols 0-5)
                // Row 0
                { "matrix": [0, 0], "x": 0, "y": 0 },
                { "matrix": [0, 1], "x": 1, "y": 0 },
                { "matrix": [0, 2], "x": 2, "y": 0 },
                { "matrix": [0, 3], "x": 3, "y": 0 },
                { "matrix": [0, 4], "x": 4, "y": 0 },
                { "matrix": [0, 5], "x": 5, "y": 0 },

                // Row 1
                { "matrix": [1, 0], "x": 0, "y": 1 },
                { "matrix": [1, 1], "x": 1, "y": 1 },
                { "matrix": [1, 2], "x": 2, "y": 1 },
                { "matrix": [1, 3], "x": 3, "y": 1 },
                { "matrix": [1, 4], "x": 4, "y": 1 },
                { "matrix": [1, 5], "x": 5, "y": 1 },

                // Row 2
                { "matrix": [2, 0], "x": 0, "y": 2 },
                { "matrix": [2, 1], "x": 1, "y": 2 },
                { "matrix": [2, 2], "x": 2, "y": 2 },
                { "matrix": [2, 3], "x": 3, "y": 2 },
                { "matrix": [2, 4], "x": 4, "y": 2 },
                { "matrix": [2, 5], "x": 5, "y": 2 },

                // Row 3
                { "matrix": [3, 0], "x": 0, "y": 3 },
                { "matrix": [3, 1], "x": 1, "y": 3 },
                { "matrix": [3, 2], "x": 2, "y": 3 },
                { "matrix": [3, 3], "x": 3, "y": 3 },
                { "matrix": [3, 4], "x": 4, "y": 3 },
                { "matrix": [3, 5], "x": 5, "y": 3 },

                // Row 4 (Left thumb cluster/bottom row)
                { "matrix": [4, 3], "x": 4, "y": 4 },
                { "matrix": [4, 4], "x": 5, "y": 4 },
                { "matrix": [4, 5], "x": 6, "y": 4 }, // This might be for a 1.25u or 1.5u key

                // Right Half (Rows 5-9, Cols 0-5)
                // Row 0 (physical row 0 on right half becomes logical row 5)
                { "matrix": [5, 0], "x": 9, "y": 0 }, // HR_6
                { "matrix": [5, 1], "x": 10, "y": 0 }, // KC_7
                { "matrix": [5, 2], "x": 11, "y": 0 }, // KC_8
                { "matrix": [5, 3], "x": 12, "y": 0 }, // KC_9
                { "matrix": [5, 4], "x": 13, "y": 0 }, // KC_0
                { "matrix": [5, 5], "x": 14, "y": 0 }, // TD(TD_ESC_LAYER_BOOT)

                // Row 1 (physical row 1 on right half becomes logical row 6)
                { "matrix": [6, 0], "x": 9, "y": 1 }, // HD_HASH
                { "matrix": [6, 1], "x": 10, "y": 1 }, // EOS
                { "matrix": [6, 2], "x": 11, "y": 1 }, // HD_SLSH
                { "matrix": [6, 3], "x": 12, "y": 1 }, // HD_DQUO
                { "matrix": [6, 4], "x": 13, "y": 1 }, // HD_QUOT
                { "matrix": [6, 5], "x": 14, "y": 1 }, // KC_BSPC

                // Row 2 (physical row 2 on right half becomes logical row 7)
                { "matrix": [7, 0], "x": 9, "y": 2 }, // HD_COMM
                { "matrix": [7, 1], "x": 10, "y": 2 }, // HD_A
                { "matrix": [7, 2], "x": 11, "y": 2 }, // HD_E
                { "matrix": [7, 3], "x": 12, "y": 2 }, // HD_I
                { "matrix": [7, 4], "x": 13, "y": 2 }, // HD_H
                { "matrix": [7, 5], "x": 14, "y": 2 }, // HD_Z

                // Row 3 (physical row 3 on right half becomes logical row 8)
                { "matrix": [8, 0], "x": 9, "y": 3 }, // HD_MINS
                { "matrix": [8, 1], "x": 10, "y": 3 }, // HD_U
                { "matrix": [8, 2], "x": 11, "y": 3 }, // HD_O
                { "matrix": [8, 3], "x": 12, "y": 3 }, // HD_Y
                { "matrix": [8, 4], "x": 13, "y": 3 }, // HD_B
                { "matrix": [8, 5], "x": 14, "y": 3 }, // HD_RSFT

                // Row 4 (physical row 4 on right half becomes logical row 9) - Right thumb cluster/bottom row
                { "matrix": [9, 3], "x": 10, "y": 4 }, // HD_ESC (assuming this aligns with x:10)
                { "matrix": [9, 4], "x": 11, "y": 4 }, // KC_SPC
                { "matrix": [9, 5], "x": 12, "y": 4 } // KC_ENT
            ]
        }
    }
}
